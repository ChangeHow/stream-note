{
  "name": "stream-note",
  "version": "0.1.0",
  "private": true,
  "description": "A daily markdown note-taking app with GTD task management and schedule planning",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/server/index.ts",
    "dev:web": "bun x rspack serve --mode development",
    "build": "bun x rspack build --mode production",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "start": "bun dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint --tsconfig tsconfig.json .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxlint --tsconfig tsconfig.json",
      "oxfmt --check"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@radix-ui/react-slot": "^1.1.2",
    "@tanstack/react-query": "^5.69.0",
    "@tanstack/react-router": "^1.109.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.7.4",
    "lucide-react": "^0.475.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.12"
  },
  "devDependencies": {
    "@rspack/cli": "^1.3.3",
    "@rspack/core": "^1.3.3",
    "@tailwindcss/postcss": "^4.0.12",
    "@types/bun": "^1.2.4",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "oxfmt": "^0.0.8",
    "oxlint": "^0.16.6",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
