{
  "name": "stream-note",
  "version": "0.1.0",
  "private": true,
  "description": "A daily markdown note-taking app with GTD task management and schedule planning",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/server/index.ts",
    "dev:web": "bun x rspack serve --mode development",
    "build": "bun x rspack build --mode production",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "start": "bun dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint .",
    "format": "biome format . --write"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.7.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@rspack/cli": "^1.3.3",
    "@rspack/core": "^1.3.3",
    "@types/bun": "^1.2.4",
    "@types/node": "^22.13.9",
    "oxlint": "^0.16.6",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
