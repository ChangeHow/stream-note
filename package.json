{
  "name": "stream-note",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "build": "bun --filter '*' build",
    "lint": "bun --filter '*' lint",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "typecheck": "bun --filter '*' typecheck",
    "test": "bun --filter '*' test",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/web/**/*.{ts,tsx}": [
      "oxlint --tsconfig packages/web/tsconfig.json -c packages/web/.oxlintrc.json",
      "oxfmt --check"
    ],
    "packages/server/**/*.ts": [
      "oxlint --tsconfig packages/server/tsconfig.json -c packages/server/.oxlintrc.json",
      "oxfmt --check"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "oxfmt": "^0.0.8",
    "oxlint": "^0.16.6",
    "typescript": "^5.8.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
