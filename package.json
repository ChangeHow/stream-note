{
  "name": "stream-note",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "build": "bun --filter '*' build",
    "lint": "bun --filter '*' lint",
    "precommit": "lint-staged && bun run typecheck",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "typecheck": "bun --filter '*' typecheck",
    "test": "bun --filter '*' test",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "oxlint-tsgolint": "0.15.0",
    "typescript": "5.8.2"
  },
  "lint-staged": {
    "packages/web/**/*.{ts,tsx}": [
      "oxlint --type-aware --tsconfig packages/web/tsconfig.json -c packages/web/.oxlintrc.json",
      "oxfmt --check"
    ],
    "packages/server/**/*.ts": [
      "oxlint --type-aware --tsconfig packages/server/tsconfig.json -c packages/server/.oxlintrc.json",
      "oxfmt --check"
    ]
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
