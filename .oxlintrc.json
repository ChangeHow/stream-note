{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "typescript",
    "react",
    "react-hooks",
    "unicorn",
    "import",
    "jsx-a11y",
    "promise"
  ],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "error",
    "style": "error",
    "restriction": "error"
  },
  "rules": {
    "no-console": "off",
    "max-lines": "off",
    "typescript/explicit-function-return-type": "off",
    "typescript/explicit-module-boundary-types": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "settings": {
    "react": {
      "runtime": "automatic"
    }
  },
  "ignorePatterns": ["dist/", "node_modules/", "*.config.ts", "*.config.js"]
}
